<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta
            name="description"
            content="David Tejuosho is a Software Engineer at Microsoft who's passionate about taking initiative and using technology to solve novel problems"
    />
    <meta name="keywords" content="David Tejuosho, Software Engineer, Microsoft, Tejuosho"/>
    <meta name="author" content="David Tejuosho"/>
    <meta
            name="google-site-verification"
            content="cSfle5mp0F-emhsyOuBiLCkIG9omHuJ_UdEKg0m8wkI"
    />

    {% for url in externalStyles %}
        <link rel="stylesheet" href="{{ url }}" crossorigin="anonymous"/>
    {% endfor %}

    {% if not excludeDefaultStyles %}
        <link rel="stylesheet" href="/styles/normalize.css"/>
        <link rel="stylesheet" href="/styles/style-main.css"/>
        <link rel="stylesheet" href="/styles/theme.css" id="page-color"/>
    {% endif %}

    {%- for style in styles -%}
        <link rel="stylesheet" href="/styles/{{ style }}.css"/>
    {%- endfor -%}

    <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/icons/apple-touch-icon.png"
    />
    <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/icons/favicon-32x32.png"
    />
    <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/icons/favicon-16x16.png"
    />
    <title>{{ title }}</title>
</head>

<body>
{% if not excludeHeader %}
    <header id="header">
        <nav>
            <div class="nav">
                <a href="/index.html" title="Home" class="faux-h1">David Tejuosho</a>
                <p><em>Software Engineer</em></p>
            </div>
            <ul>
                <li>
                    <a href="/#about-me" title="and how to contact me">Who am I?</a>
                </li>
                <li>
                    <a href="/#resume-sec" title="all my impressive endeavours"
                    >My Resume</a
                    >
                </li>
                <li>
                    <a href="/#stuff-i-like" title="You need to see this!"
                    >Stuff I like</a
                    >
                </li>
            </ul>
        </nav>
    </header>
{% endif %}

<main id="main">
    {{ content | safe }}
</main>

{% if not excludeFooter %}
    <footer id="footer">
        <p>
            <a
                    href="https://evenbettermotherfucking.website/"
                    target="_blank"
                    rel="noopener"
            >Inspiration</a
            >
            for original style
            <span style="color: rgb(163, 161, 161); font-size: 0.7em"
            >(vulgar)</span
            >
        </p>
    </footer>
{% endif %}
<button id="scroll-to-top" title="scroll to top" disabled>
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 19V5"/>
        <path d="M5 12l7-7 7 7"/>
    </svg>
</button>

<!-- Easter egg: skittering rat -->
<svg id="trail-rat" aria-hidden="true" viewBox="0 0 60 30" fill="var(--primary-text)">
  <!-- Body -->
  <ellipse cx="30" cy="18" rx="16" ry="10"/>
  <!-- Head -->
  <ellipse cx="48" cy="15" rx="8" ry="7"/>
  <!-- Ear -->
  <ellipse cx="52" cy="9" rx="4" ry="5"/>
  <!-- Eye -->
  <circle cx="52" cy="13" r="1.5" fill="var(--page-background)"/>
  <!-- Nose -->
  <circle cx="56" cy="15" r="2"/>
  <!-- Tail -->
  <path class="tail" d="M14 18 Q5 18 2 12 Q0 8 3 5" stroke="var(--primary-text)" stroke-width="2" fill="none" stroke-linecap="round"/>
  <!-- Whiskers -->
  <g stroke="var(--primary-text)" stroke-width="0.5">
    <line x1="56" y1="14" x2="60" y2="11"/>
    <line x1="56" y1="15" x2="60" y2="15"/>
    <line x1="56" y1="16" x2="60" y2="19"/>
  </g>
  <!-- Legs (animated) -->
  <g class="legs">
    <line class="leg leg-1" x1="38" y1="24" x2="40" y2="30" stroke="var(--primary-text)" stroke-width="2" stroke-linecap="round"/>
    <line class="leg leg-2" x1="32" y1="26" x2="30" y2="30" stroke="var(--primary-text)" stroke-width="2" stroke-linecap="round"/>
    <line class="leg leg-3" x1="26" y1="26" x2="28" y2="30" stroke="var(--primary-text)" stroke-width="2" stroke-linecap="round"/>
    <line class="leg leg-4" x1="20" y1="24" x2="18" y2="30" stroke="var(--primary-text)" stroke-width="2" stroke-linecap="round"/>
  </g>
</svg>

<!-- Switch for color or no color -->
{% if not excludeSwitch %}
    <label class="color-switch">
        <input type="checkbox" id="color-switch" checked/>
        <span class="slider round"></span>
    </label>
{% endif %}


{% if not excludeDefaultJs %}
    <script src="/js/index.js"></script>
{% endif %}

{% for script in externalScripts %}
    <script src="{{ script }}"></script>
{% endfor %}

{% for script in scripts %}
    <script src="/js/{{ script }}.js"></script>
{% endfor %}
</body>
</html>
